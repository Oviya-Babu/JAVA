public class EarthVolumeCalculator {
    public static void main(String[] args) {
        // Constants
        double radiusKm = 6378; // Radius of Earth in kilometers
        double pi = Math.PI; // Value of pi
        
        // Volume of Earth in cubic kilometers (V = 4/3 * Ï€ * r^3)
        double volumeKmCubed = (4.0 / 3.0) * pi * Math.pow(radiusKm, 3);
        
        // Conversion factor (1 cubic kilometer = 0.239913 cubic miles)
        double volumeMilesCubed = volumeKmCubed * 0.239913;
        
        // Output the volume in cubic kilometers and cubic miles
        System.out.println("The volume of earth in cubic kilometers is " + volumeKmCubed + " and cubic miles is " + volumeMilesCubed);
    }
}
